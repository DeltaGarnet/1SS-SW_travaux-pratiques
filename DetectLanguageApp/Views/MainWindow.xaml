<Window x:Class="DetectLanguageApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:DetectLanguageApp.ViewModels"
        xmlns:converters="clr-namespace:DetectLanguageApp.Converters"
        mc:Ignorable="d"
        Title="Détection de Langue API" 
        Height="550" Width="800"
        MinHeight="400" MinWidth="600"
        d:DataContext="{d:DesignInstance viewmodels:MainViewModel}">

    <Window.Resources>
        <!-- Styles pour les étiquettes et valeurs -->
        <Style TargetType="TextBlock" x:Key="LabelResultStyle">
            <Setter Property="Margin" Value="0,5,10,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ValueResultStyle">
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Replaced Style-based resources with converters -->
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityInvertedConverter" Inverted="True"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0">
            <MenuItem Header="_Fichier">
                <MenuItem Header="_Configuration du Jeton" Command="{Binding OpenConfigurationCommand}"/>
                <Separator/>
                <MenuItem Header="_Quitter" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Compte">
                <MenuItem Header="_Statut du Compte" Command="{Binding OpenStatusCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Input and Detection Section -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Texte à analyser :" Margin="0,0,0,5" FontWeight="Bold"/>

                <!-- Multi-line text input (TextBox) -->
                <TextBox Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" 
                         AcceptsReturn="True" 
                         TextWrapping="Wrap" 
                         Height="200" 
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,10"/>

                <!-- Detection Button -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Détecter la Langue" 
                            Command="{Binding DetectCommand}"
                            Grid.Column="1"
                            Padding="15,8"
                            FontWeight="SemiBold"/>
                </Grid>

                <!-- Loading Indicator -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="10" Margin="0,0,10,0"/>
                    <TextBlock Text="Détection en cours..." VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- Results Section -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Résultats de la détection :" Margin="0,0,0,5" FontWeight="Bold"/>

                <!-- ComboBox to select multiple detections -->
                <ComboBox ItemsSource="{Binding Detections}"
                          SelectedItem="{Binding SelectedDetection}"
                          DisplayMemberPath="LanguageName"
                          Margin="0,0,0,15"/>

                <!-- Detailed Result Display -->
                <Grid DataContext="{Binding SelectedDetection}"
                      Visibility="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=DataContext.SelectedDetection, Converter={StaticResource NullToVisibilityConverter}}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Langue (Code) :" Style="{StaticResource LabelResultStyle}"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding LanguageCode}" Style="{StaticResource ValueResultStyle}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Langue (Nom Long) :" Style="{StaticResource LabelResultStyle}"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LanguageName}" Style="{StaticResource ValueResultStyle}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Confiance :" Style="{StaticResource LabelResultStyle}"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Confidence, StringFormat='N2'}" Style="{StaticResource ValueResultStyle}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Est fiable :" Style="{StaticResource LabelResultStyle}"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding IsReliable}" Style="{StaticResource ValueResultStyle}"/>

                </Grid>

                <!-- Instruction message if no detection is selected -->
                <TextBlock Text="Sélectionnez une détection dans la liste."
                           FontStyle="Italic"
                           Margin="0,20,0,0"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Visibility="{Binding SelectedDetection, Converter={StaticResource NullToVisibilityInvertedConverter}}"/>
            </StackPanel>
        </Grid>

        <!-- Status Bar or Error Message -->
        <Border Grid.Row="2" Background="#FFF5E5" BorderBrush="#FFD799" BorderThickness="1" Padding="10" Margin="20,0,20,20" 
                Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#D07000" 
                       FontWeight="SemiBold" 
                       TextWrapping="Wrap"/>
        </Border>
    </Grid>

</Window>
