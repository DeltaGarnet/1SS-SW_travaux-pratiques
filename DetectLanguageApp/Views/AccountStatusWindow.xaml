<Window x:Class="DetectLanguageApp.Views.AccountStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:DetectLanguageApp.ViewModels"
        xmlns:converters="clr-namespace:DetectLanguageApp.Converters"
        mc:Ignorable="d"
        Title="Statut du Compte API" 
        Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        d:DataContext="{d:DesignInstance viewmodels:AccountStatusViewModel}">

    <Window.Resources>
        <!-- Styles pour les étiquettes et valeurs -->
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,5,10,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Converters -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:StatusToBrushConverter x:Key="StatusToColorConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Loading indicator and error message -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <StackPanel HorizontalAlignment="Center" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <ProgressBar IsIndeterminate="True" Width="200" Height="10"/>
                <TextBlock Text="Chargement du statut..." Margin="0,5,0,0" HorizontalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="Red" 
                       FontWeight="Bold" 
                       TextWrapping="Wrap"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                       Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Status Display -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel DataContext="{Binding Status}" 
                        Visibility="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.Status, Converter={StaticResource NullToVisibilityConverter}}">

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Statut du compte :" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Status}" Style="{StaticResource ValueStyle}" 
                               FontWeight="Bold" 
                               Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Plan :" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Plan}" Style="{StaticResource ValueStyle}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Expiration du plan :" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding PlanExpires}" Style="{StaticResource ValueStyle}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Date (UTC) :" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Date}" Style="{StaticResource ValueStyle}"/>

                    <Separator Grid.ColumnSpan="2" Grid.Row="4" Margin="0,10,0,10"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Requêtes envoyées aujourd'hui :" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Requests}" Style="{StaticResource ValueStyle}"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Limite de requêtes quotidienne :" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding DailyRequestsLimit}" Style="{StaticResource ValueStyle}"/>

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Octets traités aujourd'hui :" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Bytes}"/>

                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Limite d'octets quotidienne :" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding DailyBytesLimit}" Style="{StaticResource ValueStyle}"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Close button -->
        <Button Grid.Row="2" Content="Fermer" 
                HorizontalAlignment="Right" 
                Margin="0,10,0,0"
                IsCancel="True"
                Padding="10,5"/>
    </Grid>

</Window>
